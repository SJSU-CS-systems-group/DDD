<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BundleClientActivity">

    <EditText
        android:id="@+id/domain_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BundleServer Domain"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/port_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BundleServer Port"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btn_connect_bundle_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connect to bundle server"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Connected Device Addresses:"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peers_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/connected_device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/wifidirect_response_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Response:"
        android:textSize="16sp" />

    <Button
            android:id="@+id/exchange_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exchange Data" />

    <TextView
        android:id="@+id/grpc_response_text"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:scrollbars="vertical"
        android:textSize="16sp" />

</LinearLayout>

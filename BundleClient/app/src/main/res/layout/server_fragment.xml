<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context=".BundleClientActivity">

    <EditText
            android:id="@+id/domain_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BundleServer Domain"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

    <EditText
            android:id="@+id/port_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BundleServer Port"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            />

    <Button
            android:id="@+id/btn_connect_client_to_bundle_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="connect to bundle server"/>

    <Button
            android:id="@+id/save_domain_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Domain and Port" />


    <ScrollView
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/grpc_response_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:textSize="16sp" />
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BundleClientActivity">

    <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

        <View
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/k9"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="k9:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginStart="20dp"
                android:padding="0dp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/bundleUp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="bundleUp:"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="0dp"/>

        <TextView
                android:id="@+id/numberBundlesSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_marginEnd="2dp"
                android:padding="0dp"/>

        <TextView
                android:id="@+id/bundleDown"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="bundleDown:"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="0dp"/>

        <TextView
                android:id="@+id/numberBundlesReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_marginEnd="2dp"
                android:padding="0dp"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <Button
                android:id="@+id/reloadCounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reload"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginEnd="2dp"
                android:padding="0dp" />
    </LinearLayout>
</LinearLayout>


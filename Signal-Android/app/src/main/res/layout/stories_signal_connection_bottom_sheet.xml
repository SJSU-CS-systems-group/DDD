<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp">

        <ImageView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bottom_sheet_handle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header_image"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/ic_signal_connections"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/handle" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/SignalConnectionsBottomSheet__signal_connections_are_people"
            android:textAppearance="@style/Signal.Text.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_image" />

        <View
            android:id="@+id/bullet_bullet_1"
            android:layout_width="4sp"
            android:layout_height="14sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/stories_bullet"
            app:layout_constraintBottom_toBottomOf="@id/bullet_1"
            app:layout_constraintEnd_toStartOf="@id/bullet_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bullet_1" />

        <View
            android:id="@+id/bullet_bullet_2"
            android:layout_width="4sp"
            android:layout_height="14sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/stories_bullet"
            app:layout_constraintBottom_toBottomOf="@id/bullet_2"
            app:layout_constraintEnd_toStartOf="@id/bullet_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bullet_2" />

        <View
            android:id="@+id/bullet_bullet_3"
            android:layout_width="4sp"
            android:layout_height="14sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/stories_bullet"
            app:layout_constraintBottom_toBottomOf="@id/bullet_3"
            app:layout_constraintEnd_toStartOf="@id/bullet_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bullet_3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bullet_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="@string/SignalConnectionsBottomSheet__starting_a_conversation"
            android:textAppearance="@style/Signal.Text.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bullet_bullet_1"
            app:layout_constraintTop_toBottomOf="@id/text_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bullet_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/SignalConnectionsBottomSheet__accepting_a_message_request"
            android:textAppearance="@style/Signal.Text.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bullet_bullet_2"
            app:layout_constraintTop_toBottomOf="@id/bullet_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bullet_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/SignalConnectionsBottomSheet__having_them_in_your_system_contacts"
            android:textAppearance="@style/Signal.Text.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bullet_bullet_3"
            app:layout_constraintTop_toBottomOf="@id/bullet_2" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="48dp"
            android:text="@string/SignalConnectionsBottomSheet__your_connections_can_see_your_name"
            android:textAppearance="@style/Signal.Text.Body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bullet_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
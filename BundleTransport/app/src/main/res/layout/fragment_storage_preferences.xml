<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp">

    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="900"
            android:progress="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value: 100 MB"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="16dp" />

    <Button
            android:id="@+id/btn_clear_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Storage"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

    <TextView
            android:id="@+id/textViewFreeSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Space: "
            app:layout_constraintTop_toBottomOf="@id/btn_clear_storage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/textViewUsedSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used Space: "
            app:layout_constraintTop_toBottomOf="@id/textViewFreeSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>